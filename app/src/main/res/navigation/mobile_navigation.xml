<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fishmarket.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.fishmarket.ui.restaurant.list_restaurant.RestaurantFragment"
        android:label="@string/title_restaurant"
        tools:layout="@layout/fragment_restaurant">
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_add_restaurant"
            app:destination="@id/navigation_add_restaurant" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_edit_restaurant"
            app:destination="@id/navigation_edit_restaurant" />
    </fragment>

    <fragment
        android:id="@+id/navigation_table"
        android:name="com.example.fishmarket.ui.table.list_table.TableFragment"
        android:label="@string/title_table"
        tools:layout="@layout/fragment_table">
        <action
            android:id="@+id/action_navigation_table_to_navigation_add_table"
            app:destination="@id/navigation_add_table" />
        <action
            android:id="@+id/action_navigation_table_to_navigation_edit_table"
            app:destination="@id/navigation_edit_table" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_restaurant"
        android:name="com.example.fishmarket.ui.restaurant.add_restaurant.AddRestaurantFragment"
        android:label="@string/title_add_restaurant"
        tools:layout="@layout/fragment_add_restaurant" />

    <fragment
        android:id="@+id/navigation_edit_restaurant"
        android:name="com.example.fishmarket.ui.restaurant.edit_restaurant.EditRestaurantFragment"
        android:label="@string/title_edit_restaurant"
        tools:layout="@layout/fragment_edit_restaurant" />

    <fragment
        android:id="@+id/navigation_add_table"
        android:name="com.example.fishmarket.ui.table.add_table.AddTableFragment"
        android:label="@string/title_add_table"
        tools:layout="@layout/fragment_add_table" />

    <fragment
        android:id="@+id/navigation_edit_table"
        android:name="com.example.fishmarket.ui.table.edit_table.EditTableFragment"
        android:label=""
        tools:layout="@layout/fragment_edit_table"/>

</navigation>